    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Server",
            "request": "launch",
            "runtimeArgs": [
                "run-script",
                "dev"
            ],
            "cwd":"${workspaceFolder}/server",
            "runtimeExecutable": "npm",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "node"
        },
        {
            "name": "Debug Tests",
            "request": "launch",
            "cwd":"${workspaceFolder}/server",
            "runtimeArgs": [
                "run-script",
                "test"
            ],
            "runtimeExecutable": "npm",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "node",
            "outputCapture": "std",
        },       {
            "name": "Debug single tests",
            "request": "launch",
            "cwd":"${workspaceFolder}/server",
            "runtimeArgs": [
                "run-script",
                "testdoc"
            ],
            "runtimeExecutable": "npm",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "node",
            "outputCapture": "std",
        }
 
    
        
    ]
}